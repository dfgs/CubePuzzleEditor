<Window x:Class="CubePuzzleEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CubePuzzleEditor.Views"
        xmlns:local="clr-namespace:CubePuzzleEditor"        mc:Ignorable="d"
        ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen"
        Title="Puzzle editor" Height="450" Width="800" >
    <DockPanel>
		<StatusBar DockPanel.Dock="Bottom">
			<StatusBarItem>
				<TextBlock Text="Ready" />
			</StatusBarItem>
		</StatusBar>
		<views:PuzzleView DataContext="{Binding TargetNullValue={x:Static local:Data.DefaultPuzzle}}"/>
	</DockPanel>
</Window>
